{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "rules": {
    "no-const-assign": "warn",
    "no-this-before-super": "warn",
    "no-undef": "warn",
    "no-unreachable": "warn",
    "no-unused-vars": [1, {"args": "none"}],
    "constructor-super": "warn",
    "valid-typeof": "warn",
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "quotes": ["error", "single"]
  }
}